#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro tmux <args ...>"
  echo ""

  tmux --help
}

version() {
  tmux -V
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    tmux "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
